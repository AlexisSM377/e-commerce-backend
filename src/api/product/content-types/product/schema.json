{
  "kind": "collectionType",
  "collectionName": "products",
  "info": {
    "singularName": "product",
    "pluralName": "products",
    "displayName": "Product",
    "description": ""
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "productName": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "productName"
    },
    "description": {
      "type": "text"
    },
    "images": {
      "type": "media",
      "multiple": true,
      "required": false,
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ]
    },
    "active": {
      "type": "boolean",
      "default": true
    },
    "price": {
      "type": "decimal"
    },
    "stock": {
      "type": "integer"
    },
    "color": {
      "type": "enumeration",
      "enum": [
        "Rojo",
        "Amarillo",
        "Verde",
        "Azul",
        "Negro",
        "Blanco",
        "Cafe"
      ]
    },
    "isFeatured": {
      "type": "boolean"
    },
    "gender": {
      "type": "enumeration",
      "enum": [
        "Hombre",
        "Mujer",
        "Unisex"
      ]
    },
    "category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::category.category"
    },
    "size": {
      "type": "json"
    },
    "brand": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::brand.brand"
    }
  }
}
